    sageVoice.muted = true;\
    sageVoice.src = sagePathForIndex(0);\
    const p = sageVoice.play();\
    if(p && p.then) await p;\
    sageVoice.pause();\
    sageVoice.currentTime = 0;\
    sageVoice.muted = false;\
  \}catch(e)\{\
    sageVoice.muted = false;\
  \}\
\}\
