function slugFromSentence(en)\{\
  return (en||'')\
    .toLowerCase()\
    .trim()\
    .replace(/[\'92\'91\'b4`]/g,"'")\
    .replace(/\\b(i'm|i\'92m)\\b/g,'im')\
    .replace(/\\b(can't|can\'92t)\\b/g,'cant')\
    .replace(/\\b(won't|won\'92t)\\b/g,'wont')\
    .replace(/[^a-z0-9]+/g,'_')\
    .replace(/^_+|_+$/g,'');\
\}\
